# Exemple de configuration pour la production
# Copiez ce fichier en .env et remplissez les valeurs

# Base de données PostgreSQL
DATABASE_URL=postgresql://username:password@hostname:port/database_name
PGHOST=hostname
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=database_name

# Secret pour les sessions (générez une chaîne aléatoire longue)
SESSION_SECRET=votre_secret_session_tres_long_et_aleatoire_ici

# Environnement
NODE_ENV=production

# Port (généralement fourni par l'hébergeur)
PORT=3000